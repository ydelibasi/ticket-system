<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <title>{{ 'Ticket Panel' }}</title>

    <meta name="description" content="">
    <meta name="author" content="">

    <meta name="viewport" content="width=device-width">

    <link rel="stylesheet" href="{{ app.request.basepath }}/assets/css/bootstrap.css">
</head>
<body>

    {% set active = active|default(null) %}
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="{{ path('homepage') }}">{{ 'Ticket Panel' }}</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        {% if app.security.token is not null and is_granted('ROLE_USER') %}
                            <li><a href="{{ path('user') }}">{{ 'Hesabım'|trans }}</a></li>
                            <li {% if 'user_ticket_add' == active %}class="active"{% endif %}><a href="{{ path('user_ticket_add') }}">{{ 'Ticket Ekle' }}</a></li>

                            <li><a href="{{ path('user_logout') }}">{{ 'Çıkış' }}</a></li>
                        {% else %}
                            <li {% if 'login' == active %}class="active"{% endif %}><a href="{{ path('login') }}">{{ 'Giriş'|trans }}</a></li>
                            <li {% if 'register' == active %}class="active"{% endif %}><a href="{{ path('register') }}">{{ 'Kayıt'|trans }}</a></li>
                        {% endif %}
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container">
        <div id="main" role="main" class="container">
            {% set alertTypeAvaillable = [ 'info', 'success', 'warning', 'error'] %}
            {% for alert in alertTypeAvaillable %}
                {% for message in app.session.getFlashBag.get(alert) %}
                    <div class="alert alert-{{ alert }}" >
                        <button class="close" data-dismiss="alert">×</button>
                        {{ message|trans }}
                    </div>
                {% endfor %}
            {% endfor %}
            {% block content %}
            {% endblock %}
        </div>
    </div>

    <script src="{{ app.request.basepath }}/assets/js/jquery-1.11.3.min.js"></script>
    <script src="{{ app.request.basepath }}/assets/js/scripts.js"></script>
</body>
</html>
