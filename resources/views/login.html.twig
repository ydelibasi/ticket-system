{% extends 'layout.html.twig' %}
{% set active = 'login' %}

{% block content %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error }}
        </div>
    {% endif %}

        <form action="{{ path('login_check') }}" method="post" novalidate {{ form_enctype(form) }} class="form-signin">
            {{ form_widget(form) }}
        </form>
{% endblock %}

